<div class="col-md-8">
  <%= form_for @wiki do |f| %>
   <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', placeholder: "Enter the wiki's title" %>
   </div>
   <div class="form-group">  
    <%= f.label :body %>
    <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter the wiki's body" %>
   </div>  
   <% if (current_user.has_role? :admin) || (current_user.has_role? :premium) %>
    <div class="form-group" style="margin-left: 20px;">
      <%= f.label :private, class: 'checkbox' do %>
        <%= f.check_box :private %> Private wiki
      <% end %>
    </div>
   <% end %>
   <div class="form-group">
     <%= f.submit "Save", class: 'btn btn-success' %>
   </div>
  <% end %>
</div>